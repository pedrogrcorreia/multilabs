@model MultiLabs.Models.Schedule

@{
    ViewData["Title"] = "Selecionar Agendamento";
}

<h1>Selecionar Agendamento</h1>

<div>
    <h4>Agendamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tester)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.TesterId != 1) {
                @Html.DisplayFor(model => model.Tester.UserName)
            } else {
                <a style="color:red">Sem técnico atribuído!</a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Result)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.ResultId != null) {
                @Html.DisplayFor(model => model.Result.Name)
            }else{
                <a style="color:red">Ainda sem resultado!</a>
            }
        </dd>
    </dl>
</div>
<div>
    <form asp-action="SelectSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Selecionar Agendamento" class="btn btn-primary" />
            </div>
        </form>
    <a asp-action="Index">Voltar</a>
</div>
