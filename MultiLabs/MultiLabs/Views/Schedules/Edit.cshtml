@model MultiLabs.Models.Schedule

@{
    ViewData["Title"] = "Agendamento";
}

<h1>Registar Resultado</h1>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TestId" class="control-label"></label>
                <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
                <span asp-validation-for="TestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaboratoryId" class="control-label"></label>
                <select asp-for="LaboratoryId" class="form-control" asp-items="ViewBag.LaboratoryId"></select>
                <span asp-validation-for="LaboratoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultId" class="control-label"></label>
                <select asp-for="ResultId" class="form-control" asp-items="ViewBag.ResultId"></select>
                <span asp-validation-for="ResultId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.Error == null) {
                    <input type="submit" value="Registar" class="btn btn-primary"/>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexTester">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
