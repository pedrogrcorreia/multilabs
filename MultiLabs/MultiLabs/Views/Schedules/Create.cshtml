@model MultiLabs.Models.Schedule

@{
    ViewData["Title"] = "Agendamento";
}

<h1>Novo Agendamento</h1>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestId" class="control-label"></label>
                <select asp-for="TestId" class ="form-control" asp-items="ViewBag.TestId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LaboratoryId" class="control-label"></label>
                <select asp-for="LaboratoryId" class ="form-control" asp-items="ViewBag.LaboratoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <select asp-for="DateTime" class ="form-control" asp-items="ViewBag.DateTime" value="ViewBag.DateTime"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Agendar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
