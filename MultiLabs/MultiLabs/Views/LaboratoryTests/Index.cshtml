@model IEnumerable<MultiLabs.Models.LaboratoryTest>

@{
    ViewData["Title"] = "Testes por laboratório";
}

<h1>Testes por laboratório</h1>

<p>
    <a asp-action="Create" asp-route-LaboratoryId="@ViewBag.LaboratoryId">Associar teste a laboratório</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Laboratory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Test)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Laboratory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Test.Name)
            </td>
            <td>
                @Html.ActionLink("Remover teste", "Delete", new { LaboratoryId = item.LaboratoryId, TestId = item.TestId})
            </td>
        </tr>
}
    </tbody>
</table>
