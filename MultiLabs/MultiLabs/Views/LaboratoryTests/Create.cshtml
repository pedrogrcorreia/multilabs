@model MultiLabs.Models.LaboratoryTest

@{
    ViewData["Title"] = "Testes";
}

<h1>Associar novo teste</h1>

<h4>Associar novo teste a um laboratório</h4>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LaboratoryId" class="control-label"></label>
                <select asp-for="LaboratoryId" class ="form-control" asp-items="ViewBag.LaboratoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TestId" class="control-label"></label>
                <select asp-for="TestId" class ="form-control" asp-items="ViewBag.TestId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Associar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-LaboratoryId="@ViewBag.LabId">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
