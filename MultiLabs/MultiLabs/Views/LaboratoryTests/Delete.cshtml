@model MultiLabs.Models.LaboratoryTest

@{
    ViewData["Title"] = "Testes";
}

<h1>Remover teste</h1>

<h3>Remover teste deste laboratório</h3>
<div>
    <h4>Laboratório - Teste</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Laboratory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Laboratory.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LaboratoryId" />
        <input type="hidden" asp-for="TestId" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-LaboratoryId="@ViewBag.LabId">Voltar</a>
    </form>
</div>
